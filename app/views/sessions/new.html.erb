<div class="login">
	<h3>Login</h3>

	<%= form_tag '/login' do %> 
		<%= text_field_tag :email, nil, placeholder: 'Your Email' %> 
		<%= password_field_tag :password, nil, placeholder: 'Enter Password' %> 
		<br> 
		<%= submit_tag "Log In" %> 
	<% end %>

		
	<p id="error"><%= flash[:error] %></p>
	<p id="notice"><%= flash[:notice] %></p>

	<div class="no-account">Don't have an account? <a href="/signup">Sign Up</a></div>
	
</div>