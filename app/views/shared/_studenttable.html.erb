<style>
table {
	width:100%;
}
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th, td {
    padding: 5px;
}
</style>

<table>
  <tr>
    <th>Application Number</th>
    <th>Course</th>		
    <th>Status</th>
    <th>Last Updated</th>
  </tr>
  	<% @submissions.each do |sub |%>
		  <tr>
			    <td><%= sub.id %></td>
			    <td><%= sub.course.subject %></td>
			    <td><%= sub.status %></td>
			    <td><%= sub.updated_at %></td>
		  </tr>      
	   <% end %>
</table>
