<%# render submissions_show partial here %>


<h1><%= @submission.student.f_name %> <%= @submission.student.l_name %></h1>

<h3>Course Applied to: <%= @submission.course.subject %></h3>
<h3>Status of Application: <%= @submission.status.capitalize %></h3>
<h3>Last updated: <%= @submission.updated_at.strftime('%m/%d/%y %I:%M %P') %></h3>
<%= image_tag gravatar_url(@submission.student.email, '100x100') %>


<%# Render the application doc %>
<div class="submission-attachment"><%= @submission.render_attachment if @submission.has_attachment %></div>

<%# PHONE Results go here %>


<% if @submission.status == 'pending-in-person' %>  

	<%= render 'shared/genericquestionnaire' %> 

 <% elsif @submission.status  == 'rejected' || @submission.status == 'accepted'  %>

 	<%= render 'shared/genericquestionnaire' %> 

	<% if @submission.course.subject == 'wdi' %> 
		<%= render 'shared/wdiinperson' %> 
	<% elsif @submission.course.subject == 'uxi' %> 
		<%= render 'shared/uxiinperson' %> 
	<% elsif @submission.course.subject == 'pmi'%> 
		<%= render 'shared/pmiinperson' %> 
	<% end %> 
	
	<%#  this is where you put the score and change the status!!!!! %> 
<% end %> 


<% if session[:user_type] == 'Instructor' && @submission.status == 'pending-in-person' %> 
  <a href="/instructors/submissions/<%= @submission.id %>/interview/new"><button>Start In-Person Interview</button></a>		
<% elsif session[:user_type] == 'Officer' && @submission.status == 'pending-phone' %> 
  <a href="/officers/submissions/<%= @submission.id %>/phonescreen/new"><button>Start Phone Interview</button></a>		
<% end %> 


