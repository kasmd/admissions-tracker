<h1>Officers Page</h1>

<style>
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th, td {
    padding: 5px;
}
</style>

<table style="width:100%">
  <tr>
    <th>Application Number</th>
    <th>Course</th>		
    <th>Status</th>
    <th>Last Updated</th>
    <th>Details</th>
  	<th>Name</th>
  </tr>
  	<% @submissions.each do |sub |%>
		  <tr>
			    <td><%= sub.id %></td>
			    <td><%= sub.course.subject %></td>
			    <td><%= sub.status %></td>
			    <td><%= sub.updated_at %></td>
			    <td><a href="/officers/submissions/<%= sub.student.id %>">Application Details</a></td>
			    <td><%= sub.student.l_name %>, <%= sub.student.f_name %></td>
		  </tr>      
	   <% end %>
</table>



