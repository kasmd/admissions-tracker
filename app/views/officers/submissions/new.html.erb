<h1>Phone Interview</h1>

<%= form_for [:officers, @submission, @phonescreen] do |f| %> 
	<%= f.label(:q1, "Does the prospective student have critical thinking skills?") %>
	<%= f.radio_button(:q1, "1") %> 
	<%= f.radio_button(:q1, "2") %> 
	<%= f.radio_button(:q1, "3") %> 
	<%= f.radio_button(:q1, "4") %> 
	<%= f.radio_button(:q1, "5") %> <br>

	<%= f.label(:q2, "Are they comfortable with breaking down a problem?") %> 
	<%= f.radio_button(:q2, "1") %> 
	<%= f.radio_button(:q2, "2") %> 
	<%= f.radio_button(:q2, "3") %> 
	<%= f.radio_button(:q2, "4") %> 
	<%= f.radio_button(:q2, "5") %> <br>


	<%= f.label(:q3, "Does the prospective student have critical thinking skills?") %><%= f.radio_button(:q3, "1") %> 
		<%= f.radio_button(:q3, "2") %> 
		<%= f.radio_button(:q3, "3") %> 
		<%= f.radio_button(:q3, "4") %> 
		<%= f.radio_button(:q3, "5") %> <br>


	<%= f.label(:q4, "Are they willing to collaborate with others?") %> 
	<%= f.radio_button(:q4, "1") %> 
	<%= f.radio_button(:q4, "2") %> 
	<%= f.radio_button(:q4, "3") %> 
	<%= f.radio_button(:q4, "4") %> 
	<%= f.radio_button(:q4, "5") %> <br>

