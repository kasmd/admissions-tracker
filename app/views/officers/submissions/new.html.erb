	<%= f.radio_button(:q5, "1") %> 
	<%= f.radio_button(:q5, "2") %> 
	<%= f.radio_button(:q5, "3") %> 
	<%= f.radio_button(:q5, "4") %> 
	<%= f.radio_button(:q5, "5") %> <br>

	<%= f.label(:notes, "Notes") %> 
	<%= f.text_area(:notes) %> <br>

	<%= f.submit %> 

	<% end %> 

<div>
	<div id="timer">10:00</div>
	<button id="start-timer">Start</button>
	<button id="stop-timer">Stop</button>
	<button id="reset-timer">Reset</button>
</div>
